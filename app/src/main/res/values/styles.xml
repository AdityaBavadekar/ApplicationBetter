<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorTheme</item>
        <item name="background">@color/colorTheme</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="SaveAsTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:buttonStyle">@style/Widget.MaterialComponents.Button</item>
    </style>


    <style name="Fullscreen.AccountSelector.AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:windowFullscreen">true</item>
        <item name="backgroundColor">@color/colorTheme</item>
        <item name="android:windowBackground">@color/colorTheme</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowEnterAnimation">@anim/nav_default_pop_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/nav_default_exit_anim</item>
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Debug" parent="Theme.AppCompat.DayNight">
        <item name="fontFamily">sans-serif-medium</item>

    </style>

    <style name="AppTheme.BottomSheet">
        <item name="android:windowEnterAnimation">@anim/slide_out_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_to_bottom</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

</resources>